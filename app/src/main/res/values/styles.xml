<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Active thumb color & Active track color(30% transparency) switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>

        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!--<item name="actionBarSize">35dp</item>-->
        <!--window color-->
        <item name="android:windowBackground">@color/colorBackground</item>
        <!--<item name="android:textColor">@color/dark_gray_light</item>-->

        <item name="android:statusBarColor">@color/purple_200</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

</resources>