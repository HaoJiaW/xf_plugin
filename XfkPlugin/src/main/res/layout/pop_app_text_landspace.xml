<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topDecorView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circle_lin"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/settingBtn"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/setting"
            android:padding="2dp"
            android:rotation="90"/>

        <ImageView
            android:id="@+id/scrollControl"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_centerInParent="true"
            android:src="@drawable/scroll_start"
            android:rotation="90"/>

        <ImageView
            android:id="@+id/rightScale"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/scale_icon"
            android:rotation="90"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.jw.xfkplugin.AutoScrollTextView_2
            android:id="@+id/tcContentText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbars="vertical"
            android:text="@string/top_content_long"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:rotation="90"
            />

        <View
            android:id="@+id/moveView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_bg_view"
            android:layout_gravity="center"
            android:rotation="90"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/home_new"
            android:padding="2dp"
            android:rotation="90"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:rotation="90"
            >

            <ImageView
                android:id="@+id/contentSet"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_centerInParent="true"
                android:src="@drawable/content_set"
                android:padding="3dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/camera"
            android:rotation="90"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:rotation="90"
            >

            <ImageView
                android:id="@+id/oriChange"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_centerInParent="true"
                android:src="@drawable/ori_change"
                android:padding="3dp"/>

        </RelativeLayout>


        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:src="@drawable/close"
            android:layout_gravity="center_horizontal"
            android:padding="2dp"
            android:rotation="90"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/camera_icon"
            android:rotation="90"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:rotation="90">

            <ImageView
                android:id="@+id/mtxxIcon"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_centerInParent="true"
                android:src="@drawable/mtxx_logo" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/douyinIcon"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/douyin_icon"
            android:rotation="90"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:rotation="90">

            <ImageView
                android:id="@+id/qyxjIcon"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_centerInParent="true"
                android:src="@drawable/qyxj_logo" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/wutaIcon"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wuta_icon"
            android:rotation="90"/>

    </LinearLayout>









</LinearLayout>