<?xml version="1.0" encoding="utf-8"?>
<com.jw.xfkplugin.RotateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topDecorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle_lin"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:layout_angle="270">

        <LinearLayout
            android:id="@+id/iconLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="@dimen/image_wh_big_new"
                android:layout_height="@dimen/image_wh_big_new"
                android:layout_gravity="center_vertical"
                android:src="@drawable/camera_icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/mtxxIcon"
                    android:layout_width="@dimen/image_wh_big_new"
                    android:layout_height="@dimen/image_wh_big_new"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ks_icon" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/douyinIcon"
                android:layout_width="@dimen/image_wh_big_new"
                android:layout_height="@dimen/image_wh_big_new"
                android:layout_gravity="center_vertical"
                android:src="@drawable/douyin_icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/qyxjIcon"
                    android:layout_width="@dimen/image_wh_big_new"
                    android:layout_height="@dimen/image_wh_big_new"
                    android:layout_centerInParent="true"
                    android:src="@drawable/qyxj_logo" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/wutaIcon"
                android:layout_width="@dimen/image_wh_big_new"
                android:layout_height="@dimen/image_wh_big_new"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mtxx_logo" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home_1218" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/contentSet"
                    android:layout_width="@dimen/image_wh_big"
                    android:layout_height="@dimen/image_wh_big"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tc_1218"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_gravity="center_vertical"
                android:src="@drawable/camera_1218" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/oriChange"
                    android:layout_width="@dimen/image_wh_big"
                    android:layout_height="@dimen/image_wh_big"
                    android:layout_centerInParent="true"
                    android:src="@drawable/landspace_1218"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_gravity="center_vertical"
                android:src="@drawable/close_1220" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.jw.xfkplugin.AutoScrollTextView
                android:id="@+id/tcContentText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:text="@string/top_content_long"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:id="@+id/moveView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_bg_view"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/countTimeView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_bg_view2"
                android:layout_gravity="center"
                android:text="3"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="gone"
                />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/settingBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting"/>

            <ImageView
                android:id="@+id/scrollControl"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:src="@drawable/scroll_start"
                />

            <ImageView
                android:id="@+id/rightScale"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/scale_icon" />


        </RelativeLayout>


    </LinearLayout>

</com.jw.xfkplugin.RotateLayout>
