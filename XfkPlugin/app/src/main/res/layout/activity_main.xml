<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startScroll"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="开始滚动" />

        <Button
            android:id="@+id/stopScroll"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="停止滚动" />

        <Button
            android:id="@+id/preTc"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="上一个台本" />

        <Button
            android:id="@+id/nextTc"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="下一个台本" />

        <Button
            android:id="@+id/preScreenTc"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="上一个屏" />

        <Button
            android:id="@+id/nextScreenTc"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="下一个屏" />


    </LinearLayout>

    <Button
        android:id="@+id/floatWindowBtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:text="悬浮框模式"
        android:layout_above="@+id/centerView"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/dialogBtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="美颜模式" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_top">

        <Button
            android:id="@+id/change_content"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="改变内容"
            />

        <Button
            android:id="@+id/change_size"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="改变大小"
            />

        <Button
            android:id="@+id/change_speed"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="改变速度"
            />

        <Button
            android:id="@+id/change_color"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="改变颜色"
            />

        <Button
            android:id="@+id/change_alpha"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="改变透明度"
            />

    </LinearLayout>



    <View
        android:id="@+id/centerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <Button
        android:visibility="gone"
        android:id="@+id/normalWindowBtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/centerView"
        android:layout_marginTop="30dp"
        android:text="正常模式"/>

</RelativeLayout>