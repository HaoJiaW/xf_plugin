<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topDecorView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circle_lin"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="@dimen/image_wh_big_new"
            android:layout_height="@dimen/image_wh_big_new"
            android:layout_gravity="center_vertical"
            android:src="@drawable/camera_icon" />

        <ImageView
            android:id="@+id/douyinIcon"
            android:layout_width="@dimen/image_wh_big_new"
            android:layout_height="@dimen/image_wh_big_new"
            android:layout_gravity="center_vertical"
            android:src="@drawable/douyin_icon" />

        <ImageView
            android:id="@+id/wutaIcon"
            android:layout_width="@dimen/image_wh_big_new"
            android:layout_height="@dimen/image_wh_big_new"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mtxx_logo" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/qyxjIcon"
                android:layout_width="@dimen/image_wh_big_new"
                android:layout_height="@dimen/image_wh_big_new"
                android:layout_centerInParent="true"
                android:src="@drawable/qyxj_logo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mtxxIcon"
                android:layout_width="@dimen/image_wh_big_new"
                android:layout_height="@dimen/image_wh_big_new"
                android:layout_centerInParent="true"
                android:src="@drawable/ks_icon" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/homeIcon2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_rotate_tc_dialog"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/contentSet"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_centerInParent="true"
                android:src="@drawable/tc_1218" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="@dimen/image_wh_big"
            android:layout_height="@dimen/image_wh_big"
            android:layout_gravity="center_vertical"
            android:src="@drawable/show_baseline_icon_tc_dialog"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/oriChange"
                android:layout_width="@dimen/image_wh_big"
                android:layout_height="@dimen/image_wh_big"
                android:layout_centerInParent="true"
                android:src="@drawable/landspace_1218" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/close_icon2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_reload_tc_dialog" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.jw.tcdialogplugin.AutoScrollTextView
            android:id="@+id/tcContentText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <View
            android:id="@+id/baseline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/baseline_color"/>

        <View
            android:id="@+id/moveView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_bg_view"
            android:visibility="gone" />

        <TextView
            android:id="@+id/countTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="3"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="140sp"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_h_w"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/bg_h_w"
            android:layout_height="@dimen/bg_h_w"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:background="@drawable/bg_left_bottom_tc_dialog">

            <ImageView
                android:id="@+id/settingBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/left_bottom_icon_tc_dialog"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_rotate_tc_dialog"
                android:layout_margin="6dp"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>



        <ImageView
            android:id="@+id/scrollControl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:padding="4dp"
            android:src="@drawable/icon_play_tc_dialog"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="4dp"
                android:src="@drawable/icon_reload_tc_dialog" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/bg_h_w"
            android:layout_height="@dimen/bg_h_w"
            android:layout_gravity="right"
            android:background="@drawable/bg_right_bottom_tc_dialog">

            <ImageView
                android:id="@+id/rightScale"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="6dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/right_bottom_icon_tc_dialog"/>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>